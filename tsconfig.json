{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "declarationDir": "dist",
    "importHelpers": true,
    "downlevelIteration": true,
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}